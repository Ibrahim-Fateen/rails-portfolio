<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_porfolio_path %>

<%= @porfolios.each do |portfolio_item| %>
  <h2><%= link_to portfolio_item.title, porfolio_path(portfolio_item) %></h2>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image if portfolio_item.thumb_image %>
  <%= link_to "Edit", edit_porfolio_path(portfolio_item) %>

  <%#= link_to "Delete", porfolio_path(portfolio_item), method: :delete %>
  <!--  doesn't work-->

  <%= button_to "Delete", portfolio_item, method: :delete %>
<% end %>
